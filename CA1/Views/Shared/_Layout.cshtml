<!DOCTYPE html>
<html lang="en">
    @using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Mvc;
@{
    string sessionUserName = (string)Context.Request.Cookies["Username"];
    string searchStr = (string)ViewBag.Searchstr;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CA1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Search" asp-action="Index">Henry's E-Shop</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="navbar-nav flex-grow-1">
                            <a class="nav-link text-dark" asp-controller="Search"><i></i>Products</a>
                        </li>
                    </ul>
                    @*Product Searchbar*@
                    <form class="form-inline my-2 my-lg-0" asp-controller="Search" asp-action="Index" style="padding-right: 35px;">
                        <input name="searchstr" type="text" value="@searchStr" class="form-control" placeholder="Search for a product...">
                        <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">
                            <span class="fa-solid fa-magnifying-glass"></span>
                        </button>
                    </form>
                    @*Checkout cart*@
                    <a style="padding-right:25px;" class="fa fa-cart-shopping" asp-controller="CheckOut" asp-action="Index"></a>
                    @*Account dropdown*@
                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-user"></i>
                        </a>

                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item"><b>@sessionUserName</b></a>
                            <a class="dropdown-item" asp-controller="Purchase" asp-action="Index">My Purchase</a>
                            <a class="dropdown-item">Additional Feature</a>
                            <a class="dropdown-item">Additional Feature</a>
                            @{
                                if (!string.IsNullOrEmpty(@sessionUserName))
                                {
                                    <a class="dropdown-item" asp-area="" asp-controller="LogIn" asp-action="Logout">Log Out</a>
                                }
                                else
                                {
                                    <a class="dropdown-item" asp-area="" asp-controller="LogIn" asp-action="Login">Log In</a>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Henry Store
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
