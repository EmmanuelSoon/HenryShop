<!DOCTYPE html>
<html lang="en">
    @using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Mvc;
@{
   string sessionusername = (string)Context.Request.Cookies["Username"];
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CA1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Search" asp-action="Index">E-commerce</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="navbar-nav flex-grow-1">
                            @*rename controller name to direct to product page*@
                            <a class="nav-link text-dark" asp-controller="Search"><i></i>Products</a>
                        </li>
                    </ul>
                    @*rename asp-controller and action to fit search logic*@
                    <form class="form-inline my-2 my-lg-0" asp-controller="Search" asp-action="Index" style="padding-right: 35px;">
                        @*rename name "searchStr" to fit search logic*@
                        <input name="searchstr" type="text" class="form-control" placeholder="Search for a product...">
                        <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">
                            <span class="fa-solid fa-magnifying-glass"></span>
                        </button>
                    </form>
                    <a style="padding-right:25px;" class="fa fa-cart-shopping"></a>
                </div>
                <div>
                    <a class="nav-link text-dark" asp-area="" asp-controller="LogIn" asp-action="Logout">
                        @{
                            if (!string.IsNullOrEmpty(@sessionusername))
                            {
                                @: Log Out
                            }
                            else
                            {
                                @: Log In
                            }
                        }


                    </a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
