<div class="container">
    <div class = "row row-content">
        <div class="mt-3 mb-2 offset-1">
            <h4>@statement</h4>
        </div>
    </div>
</div>

<div class = "container">
   <div class = "row row-content">
       <div class = "col-10 offset-1">
                @if (products.Count == 0)
                {
                    @: there are no matches...
                }
                else
                {
                    

                    <div class= "card-deck">
                    @foreach(Product product in products)
                    {
                        <div class="col-12 col-sm-4 mb-5">
                            <div class ="card">
                            
                                <img class="card-img-top" src = @product.Img alt = "image not found" height = "200"> 
                                <div class="card-body">
                                    <h5 class="card-header">@product.Name</h5>
                                    <p class="card-text">@product.Desc</p>
                                </div>
                                <div class="card-body">
                                    <a>$@product.Price</a>
                                </div>
                                <div class="card-body"> 
                                    @Html.ActionLink("Add to Cart","AddtoCart", "Search", product, new {@class="btn btn-outline-primary"})
                                </div>
                        </div>
                        </div>
                    }
                    </div>
                }
       </div>
   </div>
</div>

</body>

